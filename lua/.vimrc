let mapleader=' '

set nocompatible

" Bells 
set noerrorbells 
set belloff=all

" Line
set number
set relativenumber

" Cursor line
set cursorline

" Search
set hlsearch
set incsearch
set ignorecase
set smartcase
set showmatch

" Indentation and line numbering
set expandtab
set shiftwidth=4
set tabstop=4
set softtabstop=4
set smartindent

" Mouse
set mouse=a
set nomousefocus
set nomousehide

" Clipboard
set clipboard=unnamedplus

" Splits
set splitright
set splitbelow

set autoread
set browsedir=current
set encoding=utf8
set swapfile
set shell=/bin/zsh

set langmap=йq,цw,уe,кr,еt,нy,гu,шi,щo,зp,х[,ъ],фa,ыs,вd,аf,пg,рh,оj,лk,дl,ж\\;,э',ё\\,яz,чx,сc,мv,иb,тn,ьm,б\\,,ю.,ЙQ,ЦW,УE,КR,ЕT,НY,ГU,ШI,ЩO,ЗP,Х{,Ъ},ФA,ЫS,ВD,АF,ПG,РH,ОJ,ЛK,ДL,Ж:,Э\\",ЯZ,ЧX,СC,МV,ИB,ТN,ЬM,Б<,Ю>,Ё/|

set scrolloff=4
